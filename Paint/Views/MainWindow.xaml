<RibbonWindow
    x:Class="Paint.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Fluent="urn:fluent-ribbon"
    xmlns:custom="clr-namespace:Paint.CustomControl"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="clr-namespace:Paint.Helpers"
    xmlns:local="clr-namespace:Paint.Views"
    xmlns:pc="clr-namespace:PluginContract;assembly=PluginContract"
    xmlns:ribbon="clr-namespace:System.Windows.Controls.Ribbon.Primitives;assembly=System.Windows.Controls.Ribbon"
    xmlns:vm="clr-namespace:Paint.ViewModels"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    Title="Paint"
    Width="800"
    Height="600"
    Loaded="RibbonWindow_Loaded">

    <DockPanel LastChildFill="True">
        <Ribbon
            x:Name="RibbonWin"
            Grid.Row="0"
            Panel.ZIndex="999"
            DockPanel.Dock="Top"
            SelectedIndex="0">
            <!--  Help Pane, located at the right-hand side  -->
            <Ribbon.HelpPaneContent>
                <RibbonButton />
            </Ribbon.HelpPaneContent>
            <!--  Quick Access Toolbar - located at the upper-left corner  -->
            <Ribbon.QuickAccessToolBar>
                <RibbonQuickAccessToolBar>
                    <RibbonButton x:Name="Save" Click="saveBtnEvenListener" SmallImageSource="{Binding Path=saveIcoPath}" />
                    <RibbonButton x:Name="Undo" Click="undoBtnEvenListener" SmallImageSource="{Binding Path=undoIcoPath}">
                    </RibbonButton>
                    <RibbonButton x:Name="Redo" Click="redoBtnEvenListener" SmallImageSource="{Binding Path=redoIcoPath}">
                    </RibbonButton>
                </RibbonQuickAccessToolBar>
            </Ribbon.QuickAccessToolBar>
            <!--  Application Menu, located at the left-hand side (down arrow)  -->
            <Ribbon.ApplicationMenu>
                <RibbonApplicationMenu KeyTip="F" Label="File">
                    <RibbonApplicationMenu.SmallImageSource>
                        <DrawingImage>
                            <DrawingImage.Drawing>
                                <GeometryDrawing>
                                    <GeometryDrawing.Geometry>
                                        <RectangleGeometry Rect="0,0,20,20" />
                                    </GeometryDrawing.Geometry>
                                    <GeometryDrawing.Brush>
                                        <VisualBrush Stretch="Uniform">
                                            <VisualBrush.Visual>
                                                <TextBlock
                                                    FontSize="16"
                                                    Foreground="White"
                                                    Text="File" />
                                            </VisualBrush.Visual>
                                        </VisualBrush>
                                    </GeometryDrawing.Brush>
                                </GeometryDrawing>
                            </DrawingImage.Drawing>
                        </DrawingImage>
                    </RibbonApplicationMenu.SmallImageSource>
                    <!--  FUCKING NAME  -->

                    <RibbonApplicationMenuItem Header="New" Click="createNewFileBtnEvenListener"/>
                    <RibbonApplicationMenuItem Header="Open" Click="openFileBtnEvenListener"/>
                    <RibbonApplicationMenuItem Header="Save" Click="saveBtnEvenListener"/>
                    <RibbonApplicationSplitMenuItem Header="Save img as">
                        <RibbonApplicationMenuItem Header="JPG" Click="saveAsJPGBtnEvenListener"/>
                        <RibbonApplicationMenuItem Header="PNG" Click="saveAsPNGBtnEvenListener"/>
                    </RibbonApplicationSplitMenuItem>
                    <RibbonApplicationMenuItem Header="Exit" Click="exitAsPNGBtnEvenListener" />

                    <RibbonApplicationMenu.AuxiliaryPaneContent>
                        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0">
                                <TextBlock
                                    Margin="5"
                                    FontWeight="Bold"
                                    Text="Recent Items" />
                            </Border>
                            <ListBox x:Name="recentImgListBox" Grid.Row="1">
                                <ListBox.Items>
                                    <ListBoxItem Content="Readme.txt" />
                                    <ListBoxItem Content="OriginalScript.dfs" IsSelected="True" />
                                    <ListBoxItem Content="MyScript.dfs" />
                                </ListBox.Items>
                            </ListBox>
                        </Grid>
                    </RibbonApplicationMenu.AuxiliaryPaneContent>
                    <RibbonApplicationMenu.FooterPaneContent>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <RibbonButton Grid.Column="2" Label="Exit" />
                        </Grid>
                    </RibbonApplicationMenu.FooterPaneContent>
                </RibbonApplicationMenu>

            </Ribbon.ApplicationMenu>

            <!--  Ribbon Tab #1: Home  -->
            <RibbonTab Header="Home" KeyTip="H">

                <!--  Clipboard  group  -->
                <RibbonGroup x:Name="ClipboardGroup" Header="Clipboard">
                    <RibbonButton KeyTip="V" Label="Paste" Click="pasteBtnEvenListener" LargeImageSource="{Binding Path=pasteIcoPath}">
                 
                    </RibbonButton>
                    <RibbonButton KeyTip="X" Label="Cut" Click="cutBtnEvenListener" SmallImageSource="{Binding Path=cutIcoPath}"/>
                    <RibbonButton KeyTip="C" Label="Copy" Click="copyBtnEvenListener" SmallImageSource="{Binding Path=copyIcoPath}"/>
                </RibbonGroup>
                <!--  Image  group  -->
                <RibbonGroup x:Name="ImageGroup" Header="Image">
                    <RibbonButton Label="Select" Click="selectBtnEvenListener" LargeImageSource="{Binding Path=selectIcoPath}">
                     
                    </RibbonButton>
                    <RibbonButton Label="Resize" Click="resizeBtnEvenListener"  SmallImageSource="{Binding Path=cropIcoPath}"/>
                    <RibbonMenuButton Label="Rotate" SmallImageSource="{Binding Path=rotateIcoPath}">
                        <RibbonMenuItem Header="Flip horizontal" Click="flipHorizontalBtnEvenListener"  ImageSource="{Binding Path=horizonIcoPath}"/>
                        <RibbonMenuItem Header="Flip vertical" Click="filpVerticalBtnEvenListener"  ImageSource="{Binding Path=verticalIcoPath}"/>
                        <RibbonMenuItem Header="Rotate left 90" Click="rotateLeftBtnEvenListener"  ImageSource="{Binding Path=rotateleftIcoPath}"/>
                        <RibbonMenuItem Header="Rotate right 90" Click="rotateRightBtnEvenListener"  ImageSource="{Binding Path=rotaterightIcoPath}"/>
                    </RibbonMenuButton>

                </RibbonGroup>
                <!--  Tool  group  -->
                <RibbonGroup x:Name="ToolGroup" Header="Tools">

                    <RibbonButton Label="Pen" Click="pickedPenBtnEvenListener"  SmallImageSource="{Binding Path=brushIcoPath}"/>
                    <RibbonButton Label="Bucket fill" Click="pickedBucketFillBtnEvenListener"  SmallImageSource="{Binding Path=fillIcoPath}" />
                    <RibbonButton Label="Text" Click="pickedTextBtnEvenListener"  SmallImageSource="{Binding Path=textIcoPath}"/>
                    <RibbonButton Label="Eraser" Click="pickedEarserBtnEvenListener"  SmallImageSource="{Binding Path=eraseIcoPath}"/>

                    <RibbonButton Label="Zoom" Click="zoomBtnEvenListener"  SmallImageSource="{Binding Path=zoomIcoPath}"/>

                </RibbonGroup>
                <!--  Shape  group  -->
                <RibbonGroup x:Name="ShapeGroup" Header="Shape">
                    <RibbonMenuButton x:Name="shapeMenuBtn" Label="Shape" LargeImageSource="{Binding Path=shapesIcoPath}"  VerticalAlignment="Bottom">
                        <RibbonMenuItem Header="Rectangle" />

                    </RibbonMenuButton>
                </RibbonGroup>

                <!--  Color  group  -->
                <RibbonGroup x:Name="ColorGroupPicker" Header="Color">

                    <Rectangle x:Name="rtlfill" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="20" Width="20"  Margin="0,0,0,0" Stroke="Black" VerticalAlignment="Stretch" />

                </RibbonGroup>
                
                <RibbonGroup x:Name="ColorGroupPickerAdvantage2" Header="" HorizontalAlignment ="Stretch" VerticalAlignment="Stretch">
                    <ListBox HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,0,0,0" ScrollViewer.HorizontalScrollBarVisibility="Disabled" x:Name="colorList" SelectionChanged="colorList_SelectionChanged">

                        <ListBox.ItemsPanel>

                            <ItemsPanelTemplate>

                                <WrapPanel IsItemsHost="True" Orientation="Horizontal"/>

                            </ItemsPanelTemplate>

                        </ListBox.ItemsPanel>

                        <ListBox.ItemTemplate>

                            <DataTemplate>

                                <Rectangle Fill="{Binding Name}" Width="10" Height="10" Stroke="#FF211E1E" OpacityMask="Black" StrokeThickness="1" />

                            </DataTemplate>

                        </ListBox.ItemTemplate>

                    </ListBox>

                </RibbonGroup>
                <RibbonGroup x:Name="ColorGroupPickerAdvantage" Header="">


                    <xctk:ColorPicker Name="ClrPcker_Background" DisplayColorAndName="True" SelectedColorChanged="ClrPcker_Background_SelectedColorChanged"></xctk:ColorPicker>

                </RibbonGroup>
            </RibbonTab>

        </Ribbon>

        <custom:DesignItemsControl
            x:Name="NodesControl"
            Grid.Row="1"
            ItemsSource="{Binding Nodes}">
            <custom:DesignItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <custom:DesignCanvas Background="White" IsItemsHost="True" />
                </ItemsPanelTemplate>
            </custom:DesignItemsControl.ItemsPanel>
            <custom:DesignItemsControl.ItemContainerStyle>
                <Style TargetType="{x:Type custom:DesignItemContainer}">
                    <Setter Property="Canvas.Top" Value="{Binding Top}" />
                    <Setter Property="Canvas.Left" Value="{Binding Left}" />
                    <Setter Property="Width" Value="{Binding Width}" />
                    <Setter Property="Height" Value="{Binding Height}" />
                    <Setter Property="ZIndex" Value="{Binding ZIndex}" />
                    <Setter Property="helpers:AttachedAdorner.HasHoverAdorner" Value="True" />
                    <Setter Property="helpers:AttachedAdorner.ShowResizeAdorner" Value="{Binding IsSelected}" />
                    <Setter Property="RenderTransformOrigin" Value="{Binding TransformOrigin}" />
                </Style>
            </custom:DesignItemsControl.ItemContainerStyle>
            <custom:DesignItemsControl.ItemTemplate>
                <DataTemplate>
                    <Path
                        Width="{Binding Width}"
                        Height="{Binding Height}"
                        Data="{Binding DefiningShape}"
                        Fill="{Binding Fill}"
                        RenderOptions.BitmapScalingMode="HighQuality"
                        SnapsToDevicePixels="True"
                        Stretch="Fill">
                        <Path.Style>
                            <Style>
                                <Setter Property="custom:DesignItemContainer.ApplyTransform">
                                    <Setter.Value>
                                        <TransformGroup>
                                            <TranslateTransform />
                                            <ScaleTransform />
                                            <RotateTransform Angle="{Binding RotateAngle}" />
                                        </TransformGroup>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Path.Style>
                    </Path>
                </DataTemplate>
            </custom:DesignItemsControl.ItemTemplate>
        </custom:DesignItemsControl>
    </DockPanel>

</RibbonWindow>