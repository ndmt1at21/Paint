<RibbonWindow
    x:Class="Paint.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Fluent="urn:fluent-ribbon"
    xmlns:custom="clr-namespace:Paint.CustomControl"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="clr-namespace:Paint.Helpers"
    xmlns:local="clr-namespace:Paint.Views"
    xmlns:pc="clr-namespace:PluginContract;assembly=PluginContract"
    xmlns:ribbon="clr-namespace:System.Windows.Controls.Ribbon.Primitives;assembly=System.Windows.Controls.Ribbon"
    xmlns:vm="clr-namespace:Paint.ViewModels"
    Title="Paint"
    Width="800"
    Height="600">

    <Window.DataContext>
        <vm:MainWindowViewModel />
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Ribbon x:Name="RibbonWin"  SelectedIndex="0" Grid.Row="0">
            <!-- Help Pane, located at the right-hand side -->
            <Ribbon.HelpPaneContent>
                <RibbonButton />
            </Ribbon.HelpPaneContent>
            <!-- Quick Access Toolbar - located at the upper-left corner -->
            <Ribbon.QuickAccessToolBar>
                <RibbonQuickAccessToolBar>
                    <RibbonButton x:Name ="Save" />
                    <RibbonSplitButton x:Name ="Undo" >
                        <RibbonSplitMenuItem Header="Undo" />
                    </RibbonSplitButton>
                    <RibbonSplitButton x:Name="Redo"  >
                        <RibbonSplitMenuItem Header="Redo" />
                    </RibbonSplitButton>
                </RibbonQuickAccessToolBar>
            </Ribbon.QuickAccessToolBar>
            <!-- Application Menu, located at the left-hand side (down arrow) -->
            <Ribbon.ApplicationMenu>
                <RibbonApplicationMenu Label="File" KeyTip="F">
                    <RibbonApplicationMenu.SmallImageSource>
                        <DrawingImage>
                            <DrawingImage.Drawing>
                                <GeometryDrawing>
                                    <GeometryDrawing.Geometry>
                                        <RectangleGeometry Rect="0,0,20,20"></RectangleGeometry>
                                    </GeometryDrawing.Geometry>
                                    <GeometryDrawing.Brush>
                                        <VisualBrush Stretch="Uniform">
                                            <VisualBrush.Visual>
                                                <TextBlock Text="File" FontSize="16" Foreground="White" />
                                            </VisualBrush.Visual>
                                        </VisualBrush>
                                    </GeometryDrawing.Brush>
                                </GeometryDrawing>
                            </DrawingImage.Drawing>
                        </DrawingImage>
                    </RibbonApplicationMenu.SmallImageSource>
                    <!--FUCKING NAME-->

                    <RibbonApplicationMenuItem Header="New" />
                    <RibbonApplicationMenuItem Header="Open" />
                    <RibbonApplicationMenuItem Header="Save" />
                    <RibbonApplicationMenuItem Header="Save img" />
                    <RibbonApplicationMenuItem Header="Load" />
                    <RibbonApplicationMenuItem Header="Exit" />
                </RibbonApplicationMenu>
            </Ribbon.ApplicationMenu>

            <!-- Ribbon Tab #1: Home -->
            <RibbonTab Header="Home" KeyTip="H" >

                <!-- Clipboard  group-->
                <RibbonGroup x:Name="ClipboardGroup" Header="Clipboard">
                    <RibbonMenuButton  Label="Paste" KeyTip="V">
                        <!--Large menu icon-->
                        <RibbonMenuItem  Header="Paste"/>
                        <RibbonMenuItem  Header="Paste From"/>
                    </RibbonMenuButton>
                    <RibbonButton  Label="Cut" KeyTip="X" />
                    <RibbonButton  Label="Copy" KeyTip="C" />
                </RibbonGroup>
                <!-- Image  group-->
                <RibbonGroup x:Name="ImageGroup" Header="Image">
                    <RibbonMenuButton  Label="Select">
                        <RibbonMenuItem  Header="Rectangle"/>
                        <RibbonMenuItem  Header="Free"/>
                    </RibbonMenuButton>
                    <RibbonButton  Label="Resize"/>
                    <RibbonMenuButton  Label="Rotate">
                        <RibbonMenuItem  Header="Flip horizontal"/>
                        <RibbonMenuItem  Header="Flip vertical"/>
                        <RibbonMenuItem  Header="Rotate left 90"/>
                        <RibbonMenuItem  Header="Rotate right 90"/>
                    </RibbonMenuButton>

                </RibbonGroup>
                <!-- Tool  group-->
                <RibbonGroup x:Name="ToolGroup" Header="Tools">

                    <RibbonButton  Label="Pen"/>
                    <RibbonButton  Label="Bucket fill"/>
                    <RibbonButton  Label="Text"/>
                    <RibbonButton  Label="Eraser"/>
                    <RibbonButton  Label="Color picker"/>
                    <RibbonButton  Label="Zoom"/>

                </RibbonGroup>
                <!-- Shape  group-->
                <RibbonGroup x:Name="ShapeGroup" Header="Shape">
                    <RibbonMenuButton x:Name="shapeMenuBtn" Label="Shape">
                        <RibbonMenuItem  Header="Rectangle"/>

                    </RibbonMenuButton>
                    <RibbonButton  Label="Outline"  />
                    <RibbonButton  Label="Fill" />
                </RibbonGroup>

                <!-- Color  group-->
                <RibbonGroup x:Name="ColorGroup" Header="Color">

                    <RibbonButton  Label="Color 1"  />
                    <RibbonButton  Label="Color 2" />


                    <RibbonButton  Label="Color picker" />
                </RibbonGroup>

            </RibbonTab>

        </Ribbon>
        <custom:DesignItemsControl x:Name="NodesControl" ItemsSource="{Binding Nodes}" Grid.Row="1">
            <custom:DesignItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <custom:DesignCanvas Background="White" IsItemsHost="True" />
                </ItemsPanelTemplate>
            </custom:DesignItemsControl.ItemsPanel>
            <custom:DesignItemsControl.ItemContainerStyle>
                <Style TargetType="{x:Type custom:DesignItemContainer}">
                    <Setter Property="Canvas.Top" Value="{Binding Top}" />
                    <Setter Property="Canvas.Left" Value="{Binding Left}" />
                    <Setter Property="Width" Value="{Binding Width}" />
                    <Setter Property="Height" Value="{Binding Height}" />
                    <Setter Property="helpers:AttachedAdorner.ShowResizeAdorner" Value="True" />
                    <Setter Property="RenderTransformOrigin" Value="{Binding TransformOrigin}" />
                </Style>
            </custom:DesignItemsControl.ItemContainerStyle>
            <custom:DesignItemsControl.ItemTemplate>
                <DataTemplate>
                    <Path
                        x:Name="path"
                        Width="{Binding Width}"
                        Height="{Binding Height}"
                        Data="{Binding DefiningShape}"
                        Fill="{Binding Fill}"
                        Stretch="Fill">
                        <Path.Style>
                            <Style>
                                <Setter Property="custom:DesignItemContainer.ApplyTransform">
                                    <Setter.Value>
                                        <TransformGroup>
                                            <TranslateTransform />
                                            <ScaleTransform />
                                            <RotateTransform Angle="{Binding RotateAngle}" />
                                        </TransformGroup>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Path.Style>
                    </Path>
                </DataTemplate>
            </custom:DesignItemsControl.ItemTemplate>
        </custom:DesignItemsControl>
    </Grid>

</RibbonWindow>